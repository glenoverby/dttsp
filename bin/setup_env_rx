##############################################################################
# DttSP Environment Variables

# Path to DttSP command FIFO
export SDR_PARMPATH=/dev/shm/RXcommands

# Path to DttSP meter FIFO
export SDR_METERPATH=/dev/shm/RXmeter

# Path to DttSP spectrum FIFO
export SDR_SPECPATH=/dev/shm/RXspectrum

# Sound Card Sampling Rate
export SDR_DEFRATE=48000

export SDR_NAME=sdr

